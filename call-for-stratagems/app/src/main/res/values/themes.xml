<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CallForStratagems" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/highlight</item>
        <item name="colorPrimaryDark">@color/stress</item>
        <item name="colorAccent">@color/stress</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="fontFamily">@font/hc_sinclair_medium</item>
        <item name="spinnerDropDownItemStyle">@style/AppSpinnerDropDownItem</item>
    </style>

    <style name="Theme.CallForStratagems" parent="Base.Theme.CallForStratagems" />

    <style name="AppSpinnerDropDownItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/backgroundPrimary</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppPlayText">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTitle">
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="AppEditText">
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:padding">5dp</item>
        <item name="android:textCursorDrawable">@color/highlight</item>
    </style>

    <style name="AppButton">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:fontFamily">@font/hc_sinclair_medium</item>
    </style>

    <style name="AppTextHint">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

</resources>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/connection_header">

        <EditTextPreference
            app:key="tcp_add"
            app:title="@string/tcp_add_title"
            app:defaultValue="@string/tcp_add_default"
            app:icon="@drawable/ic_cable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="tcp_port"
            app:title="@string/tcp_port_title"
            app:defaultValue="@string/tcp_port_default"
            app:icon="@drawable/ic_cable"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="tcp_test"
            app:title="@string/tcp_test_title"
            app:summary="@string/tcp_test_default"
            app:icon="@drawable/ic_sync" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <EditTextPreference
            app:key="server_port"
            app:title="@string/server_port_title"
            app:defaultValue="@string/server_port_default"
            app:icon="@drawable/ic_cable"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="input_delay"
            app:title="@string/input_delay_title"
            app:defaultValue="@string/input_delay_default"
            app:icon="@drawable/ic_time"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="ctrl_left"
            app:entries="@array/input_entries"
            app:entryValues="@array/input_values"
            app:key="input_open"
            app:title="@string/input_open_title"
            app:icon="@drawable/ic_keyboard"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:defaultValue="w"
            app:entries="@array/input_entries"
            app:entryValues="@array/input_values"
            app:key="input_up"
            app:title="@string/input_up_title"
            app:icon="@drawable/ic_keyboard"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="s"
            app:entries="@array/input_entries"
            app:entryValues="@array/input_values"
            app:key="input_down"
            app:title="@string/input_down_title"
            app:icon="@drawable/ic_keyboard"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="a"
            app:entries="@array/input_entries"
            app:entryValues="@array/input_values"
            app:key="input_left"
            app:title="@string/input_left_title"
            app:icon="@drawable/ic_keyboard"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="d"
            app:entries="@array/input_entries"
            app:entryValues="@array/input_values"
            app:key="input_right"
            app:title="@string/input_right_title"
            app:icon="@drawable/ic_keyboard"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="sync_config"
            app:title="@string/sync_config_title"
            app:summary="@string/sync_config_default"
            app:icon="@drawable/ic_check"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="Control">

        <EditTextPreference
            app:key="scroll_distance_threshold"
            app:title="@string/scroll_distance_threshold_title"
            app:defaultValue="100"
            app:icon="@drawable/ic_height"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="scroll_velocity_threshold"
            app:title="@string/scroll_velocity_threshold_title"
            app:defaultValue="50"
            app:icon="@drawable/ic_speed"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Info">

        <Preference
            app:key="info_version"
            app:title="@string/info_version"
            app:summary="@string/default_string"
            app:icon="@drawable/ic_info"
            />

        <Preference
            app:key="info_repo"
            app:title="@string/info_repo"
            app:summary="@string/info_repo_desc"
            app:icon="@drawable/ic_info"
            />

    </PreferenceCategory>

</PreferenceScreen>